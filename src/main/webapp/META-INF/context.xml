<?xml version="1.0" encoding="UTF-8"?>
<Context path="/ej_ajax">
  <!--    Pool para la base de datos -->
  <ResourceLink global="jdbc/pool_base_activeweb" name="jdbc/db_pool" type="javax.sql.DataSource"/>
  <!-- parámetros para envío de correos. Revise server.xml -->
  <ResourceLink global="usuario_correo" name="usuario_correo" type="java.lang.String"/>
  <ResourceLink global="password_correo" name="password_correo" type="java.lang.String"/>
  <!-- jwt -->
  <ResourceLink global="jwt_private_key" name="jwt_private_key" type="java.lang.String"/>
  <!-- recaptcha -->
  <ResourceLink global="recaptcha_url" name="recaptcha_url" type="java.lang.String"/>
  <ResourceLink global="recaptcha_public_key" name="recaptcha_public_key" type="java.lang.String"/>
  <ResourceLink global="recaptcha_private_key" name="recaptcha_private_key" type="java.lang.String"/>
</Context>
